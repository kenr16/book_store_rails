<div class="book-description row">
  <div class="col-sm-6">
    <h3><%= @book.title%></h3>
    <p>by <%= @book.author%></p>
    <p>price: $<%= @book.price %></p>
    <p>summary: <%= @book.description %></p>
    <p>length: <%= @book.length %> pages</p>
    <% if current_user && current_user.admin %>
      <p>
        <%= link_to "edit book", edit_book_path(@book)%> -
        <%= link_to "delete book", book_path(@book), method: :delete%>
      </p>
    <% end %>
  </div>
  <div class="col-sm-6">
    <%= image_tag @book.img_src, size: "300x450"%>
  </div>

</div>
